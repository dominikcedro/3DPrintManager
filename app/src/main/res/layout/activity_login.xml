<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".LoginActivity">

    <Button
        android:id="@+id/logo_button"
        android:layout_width="350dp"
        android:layout_height="109dp"
        android:layout_marginTop="32dp"
        android:backgroundTint="?attr/colorAccent"
        android:text="Printer Manager App"
        android:textColor="@color/white"
        android:textSize="26sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/contact_me_text"
        style="@style/textViewTheme"
        android:layout_width="315dp"
        android:layout_height="60dp"
        android:layout_marginStart="70dp"
        android:layout_marginEnd="69dp"
        android:layout_marginBottom="32dp"
        android:text="Need help? Contact creator"
        android:textColorHighlight="@color/white"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent" />


    <androidx.cardview.widget.CardView
        android:layout_width="350dp"
        android:layout_height="400dp"
        android:layout_marginStart="30dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="31dp"
        android:background="transparent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/logo_button">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/section_field_color"
            >

            <TextView
                android:id="@+id/tvLoginText"
                android:layout_width="316dp"
                android:layout_height="55dp"
                android:layout_marginStart="18dp"
                android:layout_marginTop="16dp"
                android:text="Log In"
                android:textAlignment="center"
                android:textSize="34sp"
                android:textStyle="bold"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <EditText
                android:id="@+id/enter_email_login"
                style="@style/textEditTheme"
                android:layout_width="315dp"
                android:layout_height="60dp"
                android:layout_marginStart="18dp"
                android:layout_marginTop="17dp"
                android:ems="10"
                android:hint="Enter your email: "
                android:inputType="textEmailAddress"
                android:paddingLeft="10dp"
                android:textSize="20sp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/enter_password_login" />

            <EditText
                android:id="@+id/enter_password_login"
                style="@style/textEditTheme"
                android:layout_width="315dp"
                android:layout_height="60dp"
                android:layout_marginStart="18dp"
                android:layout_marginTop="22dp"
                android:ems="10"
                android:hint="Enter your password: "
                android:inputType="textPassword"
                android:paddingLeft="10dp"
                android:textSize="20sp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/tvLoginText" />

            <TextView
                android:id="@+id/tvGoRegister"
                style="@style/textViewTheme"
                android:layout_width="315dp"
                android:layout_height="60dp"
                android:layout_marginStart="18dp"
                android:layout_marginTop="13dp"
                android:layout_marginEnd="17dp"
                android:paddingLeft="10dp"
                android:text="Don't have an account? Register here!"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/login_button" />

            <Button
                android:id="@+id/login_button"
                android:layout_width="216dp"
                android:layout_height="58dp"
                android:layout_marginStart="67dp"
                android:layout_marginTop="23dp"
                android:backgroundTint="?attr/colorAccent"
                android:text="Log in"
                android:textColor="@color/white"
                android:textSize="26sp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/enter_email_login" />
        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.cardview.widget.CardView>
</androidx.constraintlayout.widget.ConstraintLayout>