<?xml version="1.0" encoding="utf-8"?>


<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/createNewRequestLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <FrameLayout
        android:id="@+id/fragmentContainer"
        android:layout_width="408dp"
        android:layout_height="726dp"
        app:layout_constraintBottom_toBottomOf="@+id/createNewRequestLayout"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="@+id/createNewRequestLayout"
        app:layout_constraintTop_toTopOf="@+id/createNewRequestLayout">

    </FrameLayout>

    <android.widget.ScrollView
        android:id="@+id/scrollView2"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            tools:context=".CreateNewRequest">

            <Button
                android:id="@+id/newRequestButton"
                android:layout_width="367dp"
                android:layout_height="58dp"
                android:layout_marginStart="22dp"
                android:layout_marginTop="16dp"
                android:layout_marginEnd="22dp"
                android:backgroundTint="@color/button_grey"
                android:text="Create new request"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/etStartDate"
                android:layout_width="276dp"
                android:layout_height="61dp"
                android:layout_marginStart="68dp"
                android:layout_marginTop="16dp"
                android:layout_marginEnd="67dp"
                android:ems="10"
                android:text="Starting date"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.541"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/etFilament" />

            <TextView
                android:id="@+id/etStartTime"
                android:layout_width="275dp"
                android:layout_height="62dp"
                android:layout_marginStart="68dp"
                android:layout_marginTop="16dp"
                android:layout_marginEnd="68dp"
                android:ems="10"
                android:text="Start Time"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.541"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/etStartDate" />

            <TextView
                android:id="@+id/etEndDate"
                android:layout_width="275dp"
                android:layout_height="62dp"
                android:layout_marginStart="68dp"
                android:layout_marginTop="16dp"
                android:layout_marginEnd="68dp"
                android:ems="10"
                android:text="End Date"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.541"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/etStartTime" />

            <TextView
                android:id="@+id/etEndTime"
                android:layout_width="275dp"
                android:layout_height="62dp"
                android:layout_marginStart="68dp"
                android:layout_marginTop="16dp"
                android:layout_marginEnd="68dp"
                android:ems="10"
                android:text="End Time"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/etEndDate" />

            <EditText
                android:id="@+id/etSubject"
                android:layout_width="275dp"
                android:layout_height="55dp"
                android:layout_marginStart="68dp"
                android:layout_marginTop="16dp"
                android:layout_marginEnd="68dp"
                android:ems="10"
                android:hint="Subject of print"
                android:inputType="text"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/newRequestButton" />

            <Button
                android:id="@+id/submitRequestButton"
                android:layout_width="173dp"
                android:layout_height="62dp"
                android:layout_marginStart="119dp"
                android:layout_marginTop="16dp"
                android:layout_marginEnd="119dp"
                android:text="Request"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/emailNotiSwitch" />

            <EditText
                android:id="@+id/etFilament"
                android:layout_width="277dp"
                android:layout_height="59dp"
                android:layout_marginStart="68dp"
                android:layout_marginTop="16dp"
                android:ems="10"
                android:hint="Filament choice"
                android:inputType="text"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/etSubject" />

            <Switch
                android:id="@+id/emailNotiSwitch"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="106dp"
                android:layout_marginTop="18dp"
                android:text="Notify me at end of print"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/etEndTime" />

        </androidx.constraintlayout.widget.ConstraintLayout>

    </android.widget.ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>