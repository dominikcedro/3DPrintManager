<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <androidx.cardview.widget.CardView
        android:layout_width="391dp"
        android:layout_height="131dp"
        android:layout_marginStart="1dp"
        android:layout_marginEnd="1dp"
        android:layout_marginBottom="10dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:cardCornerRadius="10dp">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/colorBackgroundValent">

            <TextView
                android:id="@+id/commentBody"
                android:layout_width="375dp"
                android:layout_height="60dp"
                android:layout_marginStart="8dp"
                android:layout_marginEnd="8dp"
                android:background="@drawable/section_field_color"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:text="Comment body"
                android:textAlignment="viewStart"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/commentAuthor" />

            <TextView
                android:id="@+id/commentDate"
                android:layout_width="180dp"
                android:layout_height="30dp"
                android:layout_marginEnd="8dp"
                android:background="@drawable/section_field_color"
                android:paddingRight="8dp"
                android:textAlignment="center"
                android:text="Date of comment"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/commentAuthor"
                android:layout_width="180dp"
                android:layout_height="30dp"
                android:layout_marginStart="8dp"
                android:background="@drawable/section_field_color"
                android:paddingLeft="8dp"
                android:text="Author of the comment"
                android:textAlignment="viewStart"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <Button
                android:id="@+id/likeButton"
                android:layout_width="62dp"
                android:layout_height="40dp"
                android:layout_marginStart="8dp"
                android:background="@drawable/section_field_color"
                android:backgroundTint="@color/colorAccentTheme1"
                android:text="+"
                android:textAlignment="viewStart"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/commentBody" />

            <TextView
                android:id="@+id/commentLikes"
                android:layout_width="52dp"
                android:layout_height="41dp"
                android:layout_marginStart="16dp"
                android:background="@drawable/section_field_color"
                android:textAlignment="center"
                android:text="123"
                android:textSize="20sp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toEndOf="@+id/likeButton"
                app:layout_constraintTop_toBottomOf="@+id/commentBody" />
        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.cardview.widget.CardView>

</androidx.constraintlayout.widget.ConstraintLayout>