<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <androidx.cardview.widget.CardView
        android:layout_width="409dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="1dp"
        android:layout_marginEnd="1dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" >

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="131dp">

            <TextView
                android:id="@+id/commentBody"
                android:layout_width="405dp"
                android:layout_height="52dp"
                android:text="Comment body"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/commentAuthor" />

            <TextView
                android:id="@+id/commentDate"
                android:layout_width="117dp"
                android:layout_height="32dp"
                android:text="Date of comment"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@+id/commentAuthor"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/commentAuthor"
                android:layout_width="288dp"
                android:layout_height="32dp"
                android:text="Author of the comment"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <Button
                android:id="@+id/likeButton"
                android:layout_width="76dp"
                android:layout_height="37dp"
                android:layout_marginStart="2dp"
                android:text="like"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/commentBody" />

            <TextView
                android:id="@+id/commentLikes"
                android:layout_width="79dp"
                android:layout_height="33dp"
                android:layout_marginStart="16dp"
                android:text="likes count"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toEndOf="@+id/likeButton"
                app:layout_constraintTop_toBottomOf="@+id/commentBody" />
        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.cardview.widget.CardView>

</androidx.constraintlayout.widget.ConstraintLayout>