<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <androidx.cardview.widget.CardView
        android:layout_width="391dp"
        android:layout_height="131dp"
        android:layout_marginStart="1dp"
        android:layout_marginEnd="1dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="370dp"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/commentBody"
                android:layout_width="368dp"
                android:layout_height="51dp"
                android:text="Comment body"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/commentAuthor" />

            <TextView
                android:id="@+id/commentDate"
                android:layout_width="104dp"
                android:layout_height="31dp"
                android:text="Date of comment"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@+id/commentAuthor"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/commentAuthor"
                android:layout_width="213dp"
                android:layout_height="29dp"
                android:text="Author of the comment"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <Button
                android:id="@+id/likeButton"
                android:layout_width="74dp"
                android:layout_height="34dp"
                android:layout_marginStart="2dp"
                android:text="like"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/commentBody" />

            <TextView
                android:id="@+id/commentLikes"
                android:layout_width="69dp"
                android:layout_height="31dp"
                android:layout_marginStart="16dp"
                android:text="likes count"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toEndOf="@+id/likeButton"
                app:layout_constraintTop_toBottomOf="@+id/commentBody" />
        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.cardview.widget.CardView>

</androidx.constraintlayout.widget.ConstraintLayout>