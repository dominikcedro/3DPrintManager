<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/dark_blue">

    <TextView
        android:id="@+id/tvRequestSubject"
        android:layout_width="288dp"
        android:layout_height="51dp"
        android:layout_marginStart="61dp"
        android:layout_marginTop="64dp"
        android:layout_marginEnd="62dp"
        android:layout_marginBottom="32dp"
        android:text="subject"
        android:background="@drawable/section_field_color"
        android:gravity="center_vertical"
        android:paddingLeft="10dp"
        android:textColor="@color/white_cool"
        app:layout_constraintBottom_toTopOf="@+id/tvRequestAuthor"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tvLabelSubject"
        android:layout_width="288dp"
        android:layout_height="24dp"
        android:layout_marginStart="61dp"
        android:layout_marginEnd="62dp"
        android:text="@string/lbSubject"
        android:textColor="@color/orange"
        android:paddingLeft="10dp"

        app:layout_constraintBottom_toTopOf="@+id/tvRequestSubject"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/tvLabelAuthor"
        android:layout_width="288dp"
        android:layout_height="24dp"
        android:layout_marginStart="61dp"
        android:layout_marginEnd="62dp"
        android:text="@string/lbAuthor"
        android:textColor="@color/orange"
        app:layout_constraintBottom_toTopOf="@+id/tvRequestAuthor"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/tvLabelFilament"
        android:layout_width="288dp"
        android:layout_height="24dp"
        android:layout_marginStart="61dp"
        android:layout_marginEnd="62dp"
        android:text="@string/lbFilament"
        android:textColor="@color/orange"
        app:layout_constraintBottom_toTopOf="@+id/tvRequestFilament"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/tvLabelStartTime"
        android:layout_width="288dp"
        android:layout_height="24dp"
        android:layout_marginStart="61dp"
        android:layout_marginEnd="62dp"
        android:text="@string/lbStartTime"
        android:textColor="@color/orange"

        app:layout_constraintBottom_toTopOf="@+id/tvRequestStartTime"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/tvLabelEndDate"
        android:layout_width="288dp"
        android:layout_height="24dp"
        android:layout_marginStart="61dp"
        android:layout_marginEnd="62dp"
        android:text="@string/lbEndDate"
        android:textColor="@color/orange"
        app:layout_constraintBottom_toTopOf="@+id/tvRequestEndDate"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/tvLabelEndTime"
        android:layout_width="288dp"
        android:layout_height="24dp"
        android:layout_marginStart="61dp"
        android:layout_marginEnd="62dp"
        android:text="@string/lbEndTime"
        android:textColor="@color/orange"
        app:layout_constraintBottom_toTopOf="@+id/tvRequestEndTime"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/tvLabelStartDate"
        android:layout_width="288dp"
        android:layout_height="24dp"
        android:layout_marginStart="61dp"
        android:layout_marginEnd="62dp"
        android:text="@string/lbStartDate"
        android:textColor="@color/orange"
        app:layout_constraintBottom_toTopOf="@+id/tvRequestStart"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/tvRequestAuthor"
        android:layout_width="287dp"
        android:layout_height="53dp"
        android:layout_marginStart="61dp"
        android:layout_marginTop="32dp"
        android:layout_marginEnd="63dp"
        android:text="author"
        android:background="@drawable/section_field_color"
        android:paddingLeft="10dp"

        android:gravity="center_vertical"
        android:textColor="@color/white_cool"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tvRequestSubject" />

    <TextView
        android:id="@+id/tvRequestStart"
        android:layout_width="179dp"
        android:layout_height="51dp"
        android:layout_marginStart="61dp"
        android:layout_marginTop="32dp"
        android:text="date starts"
        android:background="@drawable/section_field_color"
        android:gravity="center_vertical"
        android:paddingLeft="10dp"
        android:textColor="@color/white_cool"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tvRequestFilament" />

    <TextView
        android:id="@+id/tvRequestDayStart"
        android:layout_width="96dp"
        android:layout_height="50dp"
        android:layout_marginTop="32dp"
        android:layout_marginEnd="60dp"
        android:background="@drawable/section_field_color"
        android:gravity="center_vertical"
        android:paddingLeft="10dp"

        android:text="STR DAY"
        android:textColor="@color/white_cool"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tvRequestFilament" />

    <TextView
        android:id="@+id/tvRequestStartTime"
        android:layout_width="284dp"
        android:layout_height="49dp"
        android:layout_marginStart="61dp"
        android:layout_marginTop="32dp"
        android:layout_marginEnd="66dp"
        android:text="time starts"
        android:background="@drawable/section_field_color"
        android:gravity="center_vertical"
        android:paddingLeft="10dp"

        android:textColor="@color/white_cool"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tvRequestStart" />

    <TextView
        android:id="@+id/tvRequestEndDate"
        android:layout_width="188dp"
        android:layout_height="48dp"
        android:layout_marginStart="61dp"
        android:layout_marginTop="32dp"
        android:text="date end"
        android:background="@drawable/section_field_color"
        android:paddingLeft="10dp"

        android:gravity="center_vertical"
        android:textColor="@color/white_cool"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tvRequestStartTime" />

    <TextView
        android:id="@+id/tvRequestDayEnd"
        android:layout_width="89dp"
        android:layout_height="49dp"
        android:layout_marginTop="32dp"
        android:layout_marginEnd="64dp"
        android:text="END DAY"
        android:background="@drawable/section_field_color"
        android:gravity="center_vertical"
        android:paddingLeft="10dp"

        android:textColor="@color/white_cool"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tvRequestStartTime" />

    <TextView
        android:id="@+id/tvRequestEndTime"
        android:layout_width="285dp"
        android:layout_height="46dp"
        android:layout_marginStart="61dp"
        android:layout_marginTop="32dp"
        android:layout_marginEnd="65dp"
        android:text="time end"
        android:background="@drawable/section_field_color"
        android:gravity="center_vertical"
        android:paddingLeft="10dp"

        android:textColor="@color/white_cool"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tvRequestEndDate" />

    <Button
        android:id="@+id/btnConfirm"
        android:layout_width="201dp"
        android:layout_height="67dp"
        android:layout_marginStart="105dp"
        android:layout_marginTop="32dp"
        android:layout_marginEnd="105dp"
        android:backgroundTint="@color/orange"
        android:text="Close window"
        android:textColor="@color/white_cool"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tvRequestEndTime" />

    <TextView
        android:id="@+id/tvRequestFilament"
        android:layout_width="291dp"
        android:layout_height="56dp"
        android:layout_marginStart="61dp"
        android:layout_marginTop="32dp"
        android:layout_marginEnd="59dp"
        android:text="filament"
        android:background="@drawable/section_field_color"
        android:paddingLeft="10dp"
        android:gravity="center_vertical"
        android:textColor="@color/white_cool"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tvRequestAuthor" />
</androidx.constraintlayout.widget.ConstraintLayout>