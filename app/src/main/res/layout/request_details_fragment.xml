<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/easy_grey">

    <TextView
        android:id="@+id/tvRequestSubject"
        android:layout_width="288dp"
        android:layout_height="51dp"
        android:layout_marginStart="61dp"
        android:layout_marginTop="64dp"
        android:layout_marginEnd="62dp"
        android:layout_marginBottom="16dp"
        android:text="subject"
        android:textColor = "@color/text_color"
        app:layout_constraintBottom_toTopOf="@+id/tvRequestAuthor"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tvRequestAuthor"
        android:layout_width="287dp"
        android:layout_height="53dp"
        android:layout_marginStart="61dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="63dp"
        android:text="author"
        android:textColor = "@color/text_color"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tvRequestSubject" />

    <TextView
        android:id="@+id/tvRequestStart"
        android:layout_width="284dp"
        android:layout_height="49dp"
        android:layout_marginStart="61dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="66dp"
        android:text="date starts"
        android:textColor = "@color/text_color"

        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tvRequestAuthor" />

    <TextView
        android:id="@+id/tvRequestEndDate"
        android:layout_width="285dp"
        android:layout_height="46dp"
        android:layout_marginStart="61dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="65dp"
        android:text="date end"
        android:textColor = "@color/text_color"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tvRequestStart" />

    <Button
        android:id="@+id/btnConfirm"
        android:layout_width="201dp"
        android:layout_height="67dp"
        android:layout_marginStart="105dp"
        android:layout_marginTop="32dp"
        android:layout_marginEnd="105dp"
        android:text="okay didnt ask"
        android:textColor = "@color/text_color"
        android:backgroundTint="@color/nice_orange"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tvRequestFilament" />

    <TextView
        android:id="@+id/tvRequestFilament"
        android:layout_width="291dp"
        android:layout_height="56dp"
        android:layout_marginStart="61dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="59dp"
        android:text="filament"
        android:textColor = "@color/text_color"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tvRequestEndDate" />
</androidx.constraintlayout.widget.ConstraintLayout>